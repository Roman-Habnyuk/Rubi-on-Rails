<h1>Список постів</h1>
<%= link_to 'Новий пост', new_post_path, class: 'btn btn-success mb-3' %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Автор</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name if post.user %></td>
        <td>
          <%= link_to 'Переглянути', post_path(post), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Редагувати', edit_post_path(post), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Видалити', post, method: :delete, data: { confirm: 'Ви впевнені?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
