<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <ul><% post.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', rows: 4 %>
  </div>
  <div class="mb-3">
    <%= form.label :user_id, "Автор (User)", class: 'form-label' %>
    <%= form.collection_select :user_id, User.all, :id, :name, class: 'form-select' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>